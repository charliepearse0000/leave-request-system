{
  "name": "leave-request-system",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=2048 jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:accessibility": "node scripts/accessibility-audit.js",
    "test:contrast": "node scripts/run-contrast-audit.js",
    "test:a11y:home": "cross-env A11Y_PATH=/ node scripts/a11y-playwright.js",
    "test:a11y:manager": "cross-env A11Y_PATH=/requests node scripts/a11y-playwright.js",
    "test:a11y:admin": "cross-env A11Y_PATH=/edit-users node scripts/a11y-playwright.js",
    "test:a11y:rtl:new-request": "cross-env RUN_A11Y=true jest --runInBand src/app/new-request/__tests__/",
    "test:a11y:rtl:requests": "cross-env RUN_A11Y=true jest --runInBand src/app/requests/__tests__/",
    "test:a11y:rtl:components": "npm run test:a11y:rtl:new-request && npm run test:a11y:rtl:requests"
    ,
    "test:frontend:all": "npm test && npm run test:a11y:rtl:components && npm run test:a11y:home && npm run test:a11y:manager && npm run test:a11y:admin"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.12.1",
    "chart.js": "^4.5.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/testing-library__react": "^10.0.1",
    "axe-core": "^4.10.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "msw": "^2.11.2",
    "playwright": "^1.55.1",
    "cross-env": "^7.0.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "undici": "^6.21.3",
    "whatwg-fetch": "^3.6.20"
  }
}
